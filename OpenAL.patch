+int16_t alsound_find_alc_sample(const int32_t id)
+{
+    int16_t i;
+    //Logger->info("alsound_sample_status looking for {}", chunk_id);
+    if (id > 128) {
+        for (i = OPENAL_C_SZ; i > 0; i--) {
+            if ((alc[i - 1].state == AL_PLAYING) && (alc[i - 1].size == id)) {
+                return i - 1;
+            }
